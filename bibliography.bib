@article{JiangX2010,
  title    = {Physical modelling and advanced simulations of gas-liquid two-phase jet flows in atomization and sprays},
  journal  = {Progress in Energy and Combustion Science},
  volume   = {36},
  number   = {2},
  pages    = {131-167},
  year     = {2010},
