@article{ZhangY2023ECM,
  title    = {State-of-the-art modeling of two-stage auto-ignition: Turbulence, evaporation and chemistry effects},
  journal  = {Energy Conversion and Management},
  volume   = {291},
  pages    = {117269},
  year     = {2023},
  issn     = {0196-8904},
