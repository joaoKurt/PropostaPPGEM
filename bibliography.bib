@article{BojkoDesJardin2017CF,
  title    = {On the development and application of a droplet flamelet-generated manifold for use in two-phase turbulent combustion simulations},
  journal  = {Combustion and Flame},
  volume   = {183},
  pages    = {50-65},
  year     = {2017},
  issn     = {0010-2180},
