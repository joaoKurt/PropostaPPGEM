@article{KayaEyiceD2024,
  title    = {Effect of flame characteristics on an isolated ethanol droplet evaporating through stagnation methane/air flames: An experimental and numerical study},
  journal  = {Combustion and Flame},
  volume   = {265},
  pages    = {113465},
  year     = {2024},
